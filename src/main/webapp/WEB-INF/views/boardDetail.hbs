<html>
    <head>
        <title>게시글 상세</title>
    </head>

    <script>
        function onList() {
            self.location.replace('/board/boardList');
        }
        function onModify() {
            var formObj = document.frm;
            if(formObj) {
                formObj.action = "/board/boardUpdate/{{board.id}}";
                formObj.method = "put";
                formObj.submit();
            }
        }

    </script>

    <body>


    <form name=frm id="formboard" method="get">
        <input type='hidden' name='bno' value="${boardVO.bno}">
    </form>

        <h1>게시판 상세</h1>
        <table>
        <tr>
            <td>글번호 : {{board.id}}</td><br>
            <td>작성자 : {{board.writer}}</td><br>
            <td>제목 : {{board.title}}</td><br>
            <td>내용 : {{board.content}}</td><br>
            <td>작성일 : {{board.createdAt}}</td><br>
            <td>수정일 : {{board.modifiedAt}}</td>
        </tr>
        </table>
        <tr>
        <button onclick="onList();">목록</button>
        <input type="button" name="수정" value="수정" onclick="onModify();"></input>
        <button><a href="#" onclick="delchk({{board.id}});">삭제</a></button>
        </tr>

    </body>
</html>

<script type="text/javascript">
    function delchk(boardId){
        if(confirm("삭제하시겠습니까?")){
            location.href = "/board/boardDelete/" + boardId;
            return true;
        } else {
            return false;
        }
    }
</script>

